                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ffsvg:SvgCachedImage Grid.Row="0" Source="{Binding BackGroundImage,Mode=TwoWay}"/>

                    <Grid Grid.Row="1" Style="{StaticResource lblWaterPlayMainContainerStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackLayout Grid.Column="0" Style="{StaticResource lblWaterPlayContainerStyle}">
                            <Label Text="{Binding Title, Mode=TwoWay}" Style="{StaticResource lblWaterPlayStyle}"/>
                            <Label Text="{Binding Date, Mode=TwoWay}" Style="{StaticResource lblDateTimeStyle}"/>
                        </StackLayout>

                        <ffsvg:SvgCachedImage Grid.Column="1" Source="{Binding Image, Mode=TwoWay}" Style="{StaticResource ImageSunIconStyle}"/>
                    </Grid>

                    <Grid Grid.Row="2" Style="{StaticResource lblNewsFeedContentContainerStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80*"/>
                            <ColumnDefinition Width="20*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Style="{StaticResource lblNewsFeedContentStyle}" Text="{Binding Description,Mode=TwoWay}"/>
                    </Grid>
                    <controls:FeedBackLayoutComponent BindingContext="{Binding FeedBackComponentModel, Mode=TwoWay}" Grid.Row="3"></controls:FeedBackLayoutComponent>

