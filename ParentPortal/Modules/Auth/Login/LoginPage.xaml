<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParentPortal.Modules.Auth.Login.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Welcome to Login Page!!" Style="{StaticResource lblLoginTagLine}" />
            </StackLayout>
            <StackLayout>
                <Button  Text="Login" Clicked="LoginButton_Clicked"></Button>
            </StackLayout>
            <StackLayout HeightRequest="30">
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding LoadForgotPasswordPage}"/>
                </StackLayout.GestureRecognizers>
                <Label  Text="Forgot Your Passowrd"></Label>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>