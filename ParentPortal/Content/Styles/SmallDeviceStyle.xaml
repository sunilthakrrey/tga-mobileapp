    <Style x:Key="AuthMainGridStyle" TargetType="Grid">
        <Setter Property="Padding" Value="30,0"/>
    </Style>

    <Style x:Key="lblAuthMainHeadingStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource lblExceptionLarge}"/>
