    <x:Double x:Key="lblXtraSmall">9</x:Double>
    <x:Double x:Key="lblSmall">10</x:Double>
    <x:Double x:Key="lblMedium">11</x:Double>
    <x:Double x:Key="lblNormal">12</x:Double>
    <x:Double x:Key="lblLarge">14</x:Double>
    <x:Double x:Key="lblXtraLarge">16</x:Double>
    <x:Double x:Key="lblXXtraLarge">20</x:Double>
    <x:Double x:Key="lblExceptionMedium">34</x:Double>

    <x:Double x:Key="lblExceptionSmall">26</x:Double>
